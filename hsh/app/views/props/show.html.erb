<h1><%= t('.title') + @prop.nombre%></h1>
<h3><%= @prop.ubicacion %></h3>

<%= image_tag url_for(@prop.imgprincipal), :alt=>@prop.nombre %>
	<br>
<% @prop.images.each do |i| %>
	<%= image_tag i %>
<% end %>
<%= link_to "Nueva subasta", new_sub_path(:prop_id => @prop.id), class: 'btn btn-success btn-sm' %>

<table class="table">
	<thead>
		<th scope="col">ID</th>
		<th scope="col">Fecha</th>
		<th scope="col">Propiedad</th>
		<th scope="col">Cliente</th>
	</thead>

	<tbody>
		<%= render partial: "reservas/reserva", collection: @prop.reserva %>
	</tbody>

</table>

<%= link_to t('.edit'), edit_prop_path, class: 'btn btn-info btn-sm' %>

<tr <%= solivip.estado == "Aceptada"?  "class=table-success": 
	(solivip.estado == "Rechazada"?  "class=table-danger" : "class=table-warning")%>>

	<th><%= solivip.id %></th>
	<th><%= solivip.usuario.email %></th>
	<th> <%= solivip.estado %> </th>
	<%if admin_signed_in?%>
		<th>
  			<% clase1 = solivip.estado == "Aceptada"?  "btn btn-success disabled" : "btn btn-success"%>
  			<%= link_to "Aceptar",aceptar_path(:solivip => solivip), class: clase1%>
  				
  			<%if solivip.estado == "Aceptada"%>
  				<%= link_to "Cancelar vip",rechazar_path(:solivip => solivip), class: "btn btn-danger" %>
  			<%else%>
  				<% clase2 = solivip.estado == "Rechazada"?  "btn btn-danger disabled" : "btn btn-danger" %>
  				<%= link_to "Rechazar",rechazar_path(:solivip => solivip), class: clase2 %>
			<%end%>
		</th>
	<%elsif usuario_signed_in?%>
		<th>
			<% clase3 = solivip.estado == "Rechazada"?  "btn btn-warning" : "btn btn-warning disabled"%>
			<%= link_to "Solicitar nuevamente",enprogre_path(:solivip => solivip), class: clase3 %>
		</th>
	<%end%>
</tr>



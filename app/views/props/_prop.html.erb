
<div class="card card-custom <%= prop.oculto ? "text-white bg-dark" : "" %> <%= prop.hotsale ? "text-white bg-primary" : "" %>  mx-2 mb-3">
	<%= link_to image_tag(url_for(prop.imgprincipal) , class: "card-img-top", alt: prop.nombre),prop %>
	<div class="card-body">
		<h5 class="card-title"><%= prop.nombre %></h5>
		<p class="card-text"><%= prop.ubicacion %></p>
		<small><%= prop.oculto ? "Propiedad oculta" : "" %></small>
		<%= link_to t('.read_more'),prop, class: "btn btn-success" %>
	</div>
</div>
